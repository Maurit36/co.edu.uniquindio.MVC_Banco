<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: #faf6f0;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.MVC_Banco.controlador.InicioControlador">

    <Label alignment="CENTER" contentDisplay="CENTER" text="Bienvenido a BanFay, su banco de confianza"
           textAlignment="JUSTIFY">
        <font>
            <Font size="21.0" />
        </font>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <effect>
         <Glow level="0.5" />
      </effect>
    </Label>

    <ImageView fitHeight="450.0" fitWidth="450.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@img/Logo Banco.jpg" />
        </image>
    </ImageView>

    <Label text="¿Qué desea hacer?" textAlignment="JUSTIFY">
        <font>
            <Font size="15.0" />
        </font>
    </Label>

    <HBox alignment="CENTER" spacing="20.0">
        <Button minHeight="40.0" minWidth="130.0" onAction="#irIniciarSesion" style="-fx-background-color: #fcb203;
        -fx-text-fill: black;" text="Iniciar sesión" />
        <Button minHeight="40.0" minWidth="130.0" onAction="#irRegistroCliente" style="-fx-background-color: #fcb203;
        -fx-text-fill: black;" text="Registrarse" />
    </HBox>

</VBox>